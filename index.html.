  <script>
    // lightweight, no-backend email capture using mailto fallback.
    // Swap 'mailto:' for your provider (Formspree / ConvertKit / Beehiiv) if desired.
    const form = document.querySelector('#signup');
    const email = document.querySelector('#email');
    const msg = document.querySelector('#msg');
    document.querySelector('#year').textContent = new Date().getFullYear();

    form.addEventListener('submit', (e) => {
      e.preventDefault();
      if(!email.checkValidity()){
        msg.textContent = 'Please enter a valid email.';
        email.focus();
        return;
      }
      const address = encodeURIComponent(email.value.trim());
      msg.textContent = 'Opening your email app…';
      const subject = encodeURIComponent('Notify me: Forget Not to Remember');
      const body = encodeURIComponent('Please add me to the release list for the Children’s Codex.');
      window.location.href = `mailto:hello@example.com?subject=${subject}&body=${body}%0D%0A%0D%0AFrom:%20${address}`;
      setTimeout(()=>{ msg.textContent = 'If your email app didn’t open, contact: dustinorder@gmail.com'; }, 800);
    }, {passive:false});
  </script>
